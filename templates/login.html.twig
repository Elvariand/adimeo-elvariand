{% extends 'base.html.twig' %}



{% block body %}
	<h1 class="text-center">Please log in</h1>
	<main class="container mx-auto mt-5 justify-content-center">
	{% if identified != true %}
		<div class="g_id_signin" id="g_id_onload" data-client_id="784533552460-njfvl5gari0nson4ua24o36on6t166kd.apps.googleusercontent.com" data-context="signin" data-login_uri="{{ path('apod') }}" data-auto_prompt="false" hidden></div>
		<div class="g_id_signin col-10 col-lg-4 mx-auto justify-content-center text-center" data-type="standard" data-shape='pill' data-size="large" data-theme="filled_blue" data-text="signin_with" data-logo_alignment="left"></div>
		{% if message is not null %}
		<div class='alert alert-danger col-md-6 mt-5 mx-auto text-center'>{{message}}</div>
		{% endif %}
	{% else %}
		<div class='alert alert-success col-md-6 mt-5 mx-auto text-center'>You already are connected. Use this button to see today's astronomy picture.</div>
		<a href="{{ path('apod') }}"><input class="btn btn-primary rounded rounded-pill text-center d-flex mx-auto mt-5" type="button" value='Pic of the Day'></a>
		{% endif %}
		{# fenetre d'erreur #}
		<div id="boxBack" class="text-center position-fixed">
			<div id="boxWrap" class="border border-2 border-danger p-4" style="border-radius: 20px;">
				<div id="boxTxt" class=""></div>
				<div class="justify-content-between">
					<input type="button" class="btn btn-default border border-dark mt-4" value="OK" id="errorBtn"/>
					<input type="button" class="btn btn-default border border-dark mt-4 d-none" value="Cancel" id="cancelBtn"/>
				</div>
			</div>
		</div>
	</main>
	{# fin fenetre d'erreur #}
{% endblock %}
